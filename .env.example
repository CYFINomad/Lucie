# Variables d'environnement pour Lucie
# Copiez ce fichier vers .env et personnalisez les valeurs

# Backend Node.js
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# Communication avec Python
PYTHON_API_URL=http://lucie-python:8000
GRPC_SERVER=lucie-python:50051
PYTHON_API_TIMEOUT=30000

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Redis
REDIS_URL=redis://redis:6379
REDIS_PREFIX=lucie:

# Fonctionnalités
FEATURE_MULTI_AI=false
FEATURE_VOICE_INPUT=false
FEATURE_AVATAR_VISUAL=false
FEATURE_PROACTIVE=false

# Sécurité
JWT_SECRET=votre-secret-key-a-changer-en-production
JWT_EXPIRES_IN=24h
CORS_ORIGINS=*